{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    // Replacing the Default Values
    "*.ts":"","*.js":"","*.jsx":"","*.tsx":"","tsconfig.json":"",".editorconfig": "",

    // Javascript
    // ".js": "*.js, .js.*",
    ".ts": "*.ts, .ts.*", // Typescript files
    ".cjs": "*.cjs, .cjs.*", // CommunJS files
    ".mjs": "*.mjs, .mjs.*", // ESmodules files
    ".jsx": "*.jsx, .jsx.*", // React javascript files
    ".tsx": "*.tsx, .tsx.*", // React typescript files
    "jsconfig.json": "tsconfig.json, .tsbuildinfo", // Config files
    "package.json": "package-lock.json, pnpm-lock.yaml, yarn.lock, bun.lockb", // Project files
    ".js": "*.js, .js.*, .ts, .cjs, .mjs, .jsx, .tsx, .component.html, jsconfig.json, package.json",

    // Java
    ".class": ".jmod", // Compiled class
    ".jar": ".war, .ear", // Package files
    ".mf": "manifest", // Manifest files
    ".java": ".class, .jsp, .jar, .mf, pom.xml, .gradle, .properties",

    // DotNet
    ".cs": ".csproj, .sln",

    // Maven
    "pom.xml": "mvnw, mvnw.cmd, mvnw.sh",

    // Gradle
    ".gradle": "gradlew, gradlew.bat, gradlew.sh",

    // Docker
    "dockerfile": "*compose.yml, *compose.yaml, .dockerignore",

    // CMD/PowerShell
    ".bat": ".ps*, .cmd",

    // Shell
    ".sh": ".bash*, .fish, .zsh",

    // Data
    ".json": ".sql, .xml, .csv",

    // Version Managers
    ".tool-versions": ".*-version, .nvmrc, .rvmrc, .sdkmanrc, .ruby-gemset",

    // Git
    ".gitignore": ".gitkeep, .gitattributes",

    // Diagrams
    ".dio": ".drawio*",

    // Packages and Compact Files
    ".zip": ".7z, .appimage, .aur, .bz2, .deb, .exe, .flatpak, .gz, .iso, .obs, .pkg, .ppa, .rar, .rpm, .snap, .tar, .tgz, .vsix, .xz, .zst, .jar, .war, .ear",

    // Audios
    ".mp3": ".ogg, .wav",

    // Images (BitMap)
    ".png": ".avif, .bmp, .gif, .heic, .heif, .icns, .ico, .jpeg, .jpg, .tiff, .webp",

    // Images (Vector)
    ".svg": ".ai, .eps, .cdr, .wmf, .dxf",

    // Videos
    ".mp4": ".avi, .flv, .m4v, .mkv, .mov, .mpeg, .mpg, .webm, .wmv",

    // Documents
    ".doc": ".docm, .docx, .dot, .dotm, .dotx, .gdoc, .odt, .ott, .pages",

    // Tables
    ".xls": ".xlsx, .xlsb, .xlsm, .xltm, .xltx, .ods, .ots, .numbers, .gsheet, .csv",

    // Presentations
    ".ppt": ".pptx, .pps, .ppsx, .pot, .potx, .otp, .odp, .key",

    // License
    "license": "license.*",

    // Changelog
    "changelog": "changelog.*",

    // Readme
    "readme": "readme.*",

    // Markdown
    ".md": ".mdx",

    // Yaml
    ".yaml": ".yml",

    // Web
    ".html": ".css, .php, .scss",

    // API test
    ".http": ".rest, .web, .rc",

    // Config
    ".config": ".editorconfig",

    // VsCode
    ".vscodeignore": ".code-workspace"
  }
}